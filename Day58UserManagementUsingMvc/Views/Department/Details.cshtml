@model Department

<h1>Details for Department Id: @Model.Id</h1>

<table class="table table-bordered">
    <tbody>
        <tr>
            <th>Department Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        
    </tbody>
</table>

<div>
    <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back to Listing</a>
</div>
