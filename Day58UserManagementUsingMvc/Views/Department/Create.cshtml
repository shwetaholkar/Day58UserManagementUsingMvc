@model Day58UserManagementUsingMvc.Models.Department

<h1>Create new Department</h1>

<form asp-controller="Department" asp-action="Create" method="post">
    <table class="table table-bordered table-striped table-hover">
        <tbody>
            <tr>
                <th>Department Name</th>
                <td><input asp-for="Name" type="text" class="form-control" /></td>
            </tr>
            <tr>
                <th>Description</th>
                <td><input asp-for="Description" type="text" class="form-control" /></td>
            </tr>
            
        </tbody>
    </table>

    <div>
        <button type="submit" class="btn btn-primary">Create Department</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Back to Listing</a>
    </div>
</form>