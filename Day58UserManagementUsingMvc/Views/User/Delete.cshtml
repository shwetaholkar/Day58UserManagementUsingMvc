@model Day58UserManagementUsingMvc.Models.User

<h1>About to delete User Id: @Model.Id. Please confirm</h1>

<table class="table table-bordered">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.FirstName @Model.LastName</td>
        </tr>
        <tr>
            <th>Date of Birth</th>
            <td>@Model.DateOfBirth</td>
        </tr>
        <tr>
            <th>PAN</th>
            <td>@Model.Pan</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th>Mobile</th>
            <td>@Model.MobileNumber</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td>@Model.Comments</td>
        </tr>
        <tr>
            <th>Department Id</th>
            <td>@Model.DepartmentRefId</td>
        </tr>
    </tbody>
</table>

<form asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id">
    <div>
        <button type="submit" class="btn btn-primary">Delete this User</button>
        <a asp-controller="User" asp-action="Index" class="btn btn-primary">Back to Listing</a>
    </div>
</form>
