@model User

<h1>Details for User Id: @Model.Id</h1>

<table class="table table-bordered">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.FirstName @Model.LastName</td>
        </tr>
        <tr>
            <th>Date of Birth</th>
            <td>@Model.DateOfBirth</td>
        </tr>
        <tr>
            <th>PAN</th>
            <td>@Model.Pan</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.Address</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>@Model.Gender</td>
        </tr>
        <tr>
            <th>Mobile</th>
            <td>@Model.MobileNumber</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Comments</th>
            <td>@Model.Comments</td>
        </tr>
        <tr>
            <th>Department Id</th>
            <td>@Model.DepartmentRefId</td>
        </tr>
    </tbody>
</table>

<div>
    <a asp-controller="User" asp-action="Index" class="btn btn-primary">Back to Listing</a>
</div>
